/** High density rules **/

/* only screen and (-o-min-device-pixel-ratio: 3/2), */

@media only screen and (-moz-min-device-pixel-ratio: 1.5),
  only screen and (-webkit-min-device-pixel-ratio: 1.5),
  only screen and (min-device-pixel-ratio: 1.5)

  body
    background-size 200px 200px

  #login, #signup
    #box
      #header_ct
        #logo
          background-image url(/images/logo@x1.5.png)
          -webkit-background-size 188px 60px
      form
        .submit
          background-image url(/images/spinner@x1.5.gif)
          background-size 16px 16px

  #home
    #box
      header
        #header_ct
          #logo
            background-image url(/images/logo.home@x1.5.png)
            -webkit-background-size 282px 90px
      .tabbable
        #search
          .area
            background-image url(/images/spinner@x1.5.gif)
            background-size 16px 16px

/* only screen and (-o-min-device-pixel-ratio: 2\/1), */

@media only screen and (-moz-min-device-pixel-ratio: 2),
  only screen and (-webkit-min-device-pixel-ratio: 2),
  only screen and (min-device-pixel-ratio: 2)

  body
    background-size 150px 150px

  #login, #signup
    #box
      #header_ct
        #logo
          background-image url(/images/logo@x2.png)
          -webkit-background-size 188px 60px
      form
        .submit
          background-image url(/images/spinner@x2.gif)
          background-size 16px 16px

  #home
    #box
      header
        #header_ct
          #logo
            background-image url(/images/logo.home@x2.png)
            -webkit-background-size 282px 90px
      .tabbable
        #search
          .area
            background-image url(/images/spinner@x2.gif)
            background-size 16px 16px
