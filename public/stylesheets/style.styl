body
  background url(/images/groovepaper.png) center top repeat

/** Login / Signup **/

#login, #signup
  .container
    padding 20px 0
  #box
    padding 19px
    background-color rgba(255, 255, 255, 0.80)
    border 1px solid #EEE
    /* border 1px solid rgba(0, 0, 0, 0.15)
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px */
    -webkit-box-shadow 0 1px 6px #bbb
    -moz-box-shadow 0 1px 6px #bbb
    box-shadow 0 1px 6px #bbb
    /* border-bottom 1px solid rgba(0, 0, 0, 0.18) */
    text-align center
    #header_ct
      border-bottom 1px solid #EEE
      margin-bottom 18px
      padding-bottom 18px
      #logo
        background-image url(/images/logo.png)
        background-position center
        background-repeat no-repeat
        width 188px
        height 60px
        display block
        margin 0 auto
    .alert
      padding 8px
    form
      fieldset > div
        margin-left 10px
      input
        width 100%
        margin-left -10px
      .submit
        margin-top 9px
        height 28px
        background-image url(/images/spinner.gif)
        background-position center
        background-repeat no-repeat

/** Home **/

#home
  .container
    // margin 0
  #box
    // border 1px solid #DDD
    background-color rgba(255, 255, 255, 0.80)
    border-left 1px solid #EEE
    border-right 1px solid #EEE
    padding 20px
    .nav-tabs, .nav-pills
      padding 0 20px
    header
      padding-bottom 40px
      #header_ct
        padding  20px 0
        #logo
          background-image url(/images/logo.home.png)
          background-position center
          background-repeat no-repeat
          width 282px
          height 90px
          display block
          margin 0 auto
  .tabbable

